{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Test",
      "type": "shell",
      "command": "./testAll.sh",
      "options": {
        "cwd": "./../scripts"
      },
      "problemMatcher": []
    },
    {
      "label": "NPM: Publish",
      "type": "shell",
      "command": "./publish.sh",
      "options": {
        "cwd": "./scripts"
      },
      "problemMatcher": []
    },
    {
      "label": "Plugin: Package and Install",
      "type": "shell",
      "command": "scripts/pack_and_install.sh",
      "options": {
        "cwd": "build/dendron/packages/plugin-core/"
      },
      "problemMatcher": []
    },
    {
      "label": "Plugin: Release",
      "type": "shell",
      "command": "scripts/publish.sh",
      "options": {
        "cwd": "build/dendron/packages/plugin-core/"
      },
      "problemMatcher": []
    },
    {
      "label": "Plugin: Pack, Install, Release",
      "dependsOn": [
        "Plugin: Package and Install",
        "Plugin: Release"
      ],
      "dependsOrder": "sequence",
      "problemMatcher": []
    },
    {
      "label": "Everything",
      "dependsOn": [
        "NPM: Publish",
        "Plugin: Package and Install",
        "Plugin: Release"
      ],
      "dependsOrder": "sequence",
      "problemMatcher": []
    },
    {
      "label": "Pub:Local",
      "dependsOn": [
        "NPM: Publish",
        "Plugin: Package and Install"
      ],
      "dependsOrder": "sequence",
      "problemMatcher": []
    }
  ]
}

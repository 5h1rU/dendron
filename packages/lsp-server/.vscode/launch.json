{
    // Use IntelliSense to learn about possible Node.js debug attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "lsp-server:test file",
        "program": "${workspaceFolder:lsp-server}/lib/${fileBasenameNoExtension}.js",
        "cwd": "${workspaceFolder:lsp-server}",
        "sourceMaps": true,
        "smartStep": true,
        "preLaunchTask": "build",
        "outFiles": ["${workspaceFolder:lsp-server}/lib/*.js"]
      },
      {
        "type": "node",
        "request": "launch",
        "name": "lsp-server:debug test",
        "program": "${workspaceFolder:lsp-server}/node_modules/jest/bin/jest.js",
        "cwd": "${workspaceFolder:lsp-server}",
        "args": ["--runInBand"]
      },
      {
        "type": "node",
        "request": "attach",
        "name": "Attach to Server 6009",
        "address": "localhost",
        "protocol": "inspector",
        "restart": true,
        "port": 6009,
        "sourceMaps": true,
        "outFiles": ["${workspaceFolder:lsp-server}/out/**/*.js"],
      },
      {
        "type": "node",
        "request": "launch",
        "name": "lsp-server:debug test file",
        "program": "${workspaceFolder:lsp-server}/node_modules/jest/bin/jest.js",
        "cwd": "${workspaceFolder:lsp-server}",
        "args": ["--runInBand", "${relativeFile}", "-u"],
        "env": {"LOG_DST": "/tmp/lsp-server.txt"}
      }
    ]
  }
  
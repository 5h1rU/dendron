    {
      "type": "node",
      "request": "launch",
      "name": "Debug file",
      "program": "${workspaceRoot}/lib/src/${fileBasenameNoExtension}.js",
      "cwd": "${workspaceRoot:}",
      "sourceMaps": true,
      "smartStep": true,
      "outFiles": [
        "${workspaceRoot}/lib/*.js"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug test file",
      "program": "${workspaceRoot:dendron-cli}/node_modules/jest/bin/jest.js",

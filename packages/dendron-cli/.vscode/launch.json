{
  // Use IntelliSense to learn about possible Node.js debug attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Build Site",
      "program": "${workspaceFolder:dendron-cli}/lib/src/protoBuildSite.js",
      "env": {"LOG_DST": "stdout", "LOG_LEVEL": "info"},
      "cwd": "${workspaceRoot}",
      "sourceMaps": true,
      "smartStep": true,
      "outFiles": [
        "${workspaceFolder:dendron-cli}/lib/**/*.js"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug file",
      "program": "${workspaceRoot}/lib/src/${fileBasenameNoExtension}.js",
      "cwd": "${workspaceRoot:}",
      "sourceMaps": true,
      "smartStep": true,
      "outFiles": [
        "${workspaceRoot}/lib/*.js"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "debug one test",
      "program": "${workspaceFolder:root}/node_modules/jest/bin/jest.js",
      "sourceMaps": true,
      "smartStep": true,
      "cwd": "${workspaceRoot:dendron-cli}",
      "env": {"LOG_DST": "../../logs/cli.log"},
      "args": [
        "--findRelatedTests",
        "${relativeFile}",
        "--runInBand"
      ],
      "outFiles": [
        "${workspaceFolder:dendron-cli}/lib/**/*.js"
      ]
    }
  ]
}

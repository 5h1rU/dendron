  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug dendron-cli",
      "program": "${workspaceRoot}/lib/bin/dendron-cli.js",
      "args": ["build-site",
        "--vault",
        "/Users/kevinlin/projects/dendronv2/dendron-template/vault",
        "--dendronRoot",
        "/Users/kevinlin/projects/dendronv2/dendron-template"],
      "cwd": "${workspaceRoot}",
      "sourceMaps": true,
      "smartStep": true,
      "outFiles": [
        "${workspaceRoot}/lib/*.js"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug file",
      "program": "${workspaceRoot}/lib/src/${fileBasenameNoExtension}.js",
      "cwd": "${workspaceRoot:}",
      "sourceMaps": true,
      "smartStep": true,
      "outFiles": [
        "${workspaceRoot}/lib/*.js"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug test file",
      "program": "${workspaceRoot}/node_modules/jest/bin/jest.js",
      "args": [
        "--findRelatedTests",
        "${relativeFile}"
      ],
      "cwd": "${workspaceRoot}","env": {"LOG_DST": "/tmp/dendron-cli.txt"}
    }
  ]
}
